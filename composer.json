{
    "name": "app/library",
    "version": "1.0.0",
    "description": "Test for the Junior Backend Developer position at Live eCommerce",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "App\\Library\\": "App/"
        }
    },
    "autoload-dev": { 
        "psr-4": { 
            "Tests\\": "Tests/" 
        } 
    },
    "authors": [
        {
            "name": "Lucas Ferreira Nogueira",
            "email": "lucas.ferreiranogueira@outlook.com"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^11.4"
    },
    "scripts": { 
        "test": "vendor/bin/phpunit", 
        "test-app": "vendor/bin/phpunit --testsuite 'Application Tests'", 
        "test-domain": "vendor/bin/phpunit --testsuite 'Domain Tests' --display-deprecations --display-notices", 
        "test-infra": "vendor/bin/phpunit --testsuite 'Infrastructure Tests'", 
        "generate-docs": "/workspaces/live_ecommerce/documentation/tools/phpdocumentor -d /workspaces/live_ecommerce/App -t /workspaces/live_ecommerce/documentation/docs-api"
    },
    "require": {
        "vlucas/phpdotenv": "^5.6"
    }
}
